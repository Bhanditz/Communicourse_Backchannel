# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             @controllers.Application.login
#POST    /post                        @controllers.Application.postMessage
#GET    /stream                       @controllers.Application.chatFeed
GET      /chat/:username              @controllers.Application.chat(username: String)
GET     /chatSocket                   @controllers.Application.chatUserSocket
GET     /register                     @controllers.Application.register
POST   /evalregister                  @controllers.Application.registerSubmission
POST   /evalLogin                     @controllers.Application.loginSubmission

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.at(path="/public", file)

    